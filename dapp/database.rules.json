{
  "rules": {
    "lendingOffers": {
      ".read": true,
      "$offerId": {
        ".write": true,
        ".validate": "newData.hasChildren(['lenderAddress', 'amount', 'interestRate', 'duration', 'status', 'createdAt'])"
      }
    },
    "borrows": {
      "$userAddress": {
        ".read": true,
        ".write": true,
        "$borrowId": {
          ".validate": "newData.hasChildren(['lenderAddress', 'amount', 'totalRepayment', 'dueDate', 'status'])"
        }
      }
    },
    "lenderLoans": {
      "$lenderAddress": {
        ".read": true,
        ".write": true,
        "$loanId": {
          ".validate": "newData.hasChildren(['borrowerAddress', 'amount', 'totalRepayment', 'dueDate', 'status'])"
        }
      }
    },
    "conversations": {
      ".read": true,
      "$conversationId": {
        ".write": true,
        ".validate": "newData.hasChildren(['participants', 'createdAt']) || !newData.exists()"
      }
    },
    "messages": {
      "$conversationId": {
        ".read": true,
        ".write": true,
        "$messageId": {
          ".write": true
        }
      }
    },
    "loanRequests": {
      "$conversationId": {
        ".read": true,
        "$requestId": {
          ".write": true,
          ".validate": "newData.hasChildren(['from', 'to', 'amount', 'status', 'createdAt'])"
        }
      }
    },
    "profiles": {
      "$userAddress": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['walletAddress', 'updatedAt'])"
      }
    },
    "payrollSchedules": {
      "$userAddress": {
        ".read": true,
        ".write": true,
        "$scheduleId": {
          ".validate": "newData.hasChildren(['name', 'frequency', 'recipients', 'createdAt'])"
        }
      }
    },
    "payrollBatches": {
      "$userAddress": {
        ".read": true,
        ".write": true,
        "$batchId": {
          ".validate": "newData.hasChildren(['name', 'recipients', 'totalAmount', 'createdAt', 'recipientCount']) || !newData.exists()"
        }
      }
    }
  }
}
